+/** Check if the bot has been active in this thread. */
+export function isMSTeamsThreadActive(threadKey: string): boolean {
+  const ts = activeThreads.get(threadKey);
+  if (ts === undefined) return false;
+  if (Date.now() - ts > TTL_MS) {
